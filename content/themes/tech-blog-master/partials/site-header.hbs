<header class="gh-head">
    <nav class="gh-navbar">
        <div class="gh-navbar-left">
            <a class="gh-nav-logo gh-navbar-item" href="/">
                <div class="gh-nav-logo-suffix">
                    {{#if @blog.logo}}
                        <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}"/>
                    {{else}}
                        {{@blog.title}}
                    {{/if}}
                </div>
            </a>
        </div>
        <div class="gh-navbar-right">
            {{#if @blog.navigation}}
                {{navigation}}
            {{/if}}
            <div class="social-links">
                {{#if @blog.facebook}}
                    <a class="social-link social-link-fb" href="{{facebook_url @blog.facebook}}" target="_blank"
                       rel="noopener" title="Compartilhar no Facebook">{{> "icons/facebook"}}</a>
                {{/if}}
                {{#if @blog.twitter}}
                    <a class="social-link social-link-tw" href="{{twitter_url @blog.twitter}}" target="_blank"
                       rel="noopener" title="Compartilhar no Twitter">{{> "icons/twitter"}}</a>
                {{/if}}
                {{#if @labs.subscribers}}
                    <a class="social-link subscribe-button" href="#subscribe" title="Se Inscrever!">{{> "icons/subscribe"}}</a>
                {{/if}}
                <a class="social-link" href="/admin" target="_blank" rel="noopener" title="Quero publicar!">{{> "icons/idea"}}</a>
            </div>
        </div>
    </nav>
</header>

<header class="gh-mobilehead">
    <nav class="gh-mobilenavbar">
        <a class="gh-nav-burger" href="#">
            <div class="hamburger hamburger--collapse"
                 aria-label="Menu" role="button" aria-controls="navigation">
                <div class="hamburger-box">
                    <div class="hamburger-inner"></div>
                </div>
            </div>
        </a>
        <a class="gh-nav-logo" href="{{@blog.url}}">
            {{@blog.title}}
        </a>
        <a class="gh-login-link" id="signin-button-mobile" href="/">Voltar</a>
    </nav>
    <div class="gh-mobilemenu">
        {{#if @blog.navigation}}
            {{navigation}}
        {{/if}}
        <div class="social-links social-link-mobile">
            {{#if @blog.facebook}}
                <a class="social-link social-link-fb" href="{{facebook_url @blog.facebook}}" target="_blank"
                   rel="noopener" title="Compartilhar no Facebook">{{> "icons/facebook"}}</a>
            {{/if}}
            {{#if @blog.twitter}}
                <a class="social-link social-link-tw" href="{{twitter_url @blog.twitter}}" target="_blank"
                   rel="noopener" title="Compartilhar no Twitter">{{> "icons/twitter"}}</a>
            {{/if}}
            {{#if @labs.subscribers}}
                <a class="social-link subscribe-button" href="#subscribe" title="Se Inscrever!">{{> "icons/subscribe"}}</a>
            {{/if}}
            <a class="social-link" href="/" target="_blank" rel="noopener" title="Quero publicar!">{{> "icons/idea"}}</a>
        </div>
    </div>
</header>
