{{!< default}}

{{#author}}
    <div class="valign-wrapper center post-header-wrapper {{#if cover_image}}grey darken-4{{/if}}">
        {{#if cover_image}}
            <div class="full-width author post-header-image"
                 style="background-image: url({{img_url cover_image}});"></div>
        {{/if}}
    </div>

    {{#if profile_image}}
        <div class="row no-margin-bottom">
            <div class="col s6">
                <img src="{{img_url profile_image}}" alt="{{name}}'s profile image" class="circle profile-image">
            </div>
        </div>
    {{/if}}

    <div class="container">
        <div class="row">
            <div class="col s12 m6 offset-m3 l6 offset-l3 center">
                <h1 class="no-margin-top">{{name}}</h1>
            </div>
            {{#if bio}}
                <div class="col s12 m12 l8 offset-l2 center">
                    <p class="no-margin-top no-margin-top">{{bio}}</p>
                </div>
            {{/if}}
        </div>

        <div class="center grey-text text-darken-1 light">
            {{#if location}}
                <p class="no-margin-bottom">
                    <i class="fas fa-map-marker-alt" aria-hidden="true"></i>
                    {{location}}
                </p>
            {{/if}}
            {{#if website}}
                <p class="no-margin-bottom">
                    <i class="fas fa-link" aria-hidden="true"></i>
                    <a href="{{website}}" class="no-text-decoration" target="_blank" rel="noopener">{{website}}</a>
                </p>
            {{/if}}
            {{#if twitter}}
                <p class="no-margin-bottom">
                    <i class="fab fa-twitter" aria-hidden="true"></i>
                    <a href="{{twitter_url}}" class="no-text-decoration" target="_blank" rel="noopener">{{twitter}}</a>
                </p>
            {{/if}}
            {{#if facebook}}
                <p class="no-margin-bottom">
                    <i class="fab fa-facebook" aria-hidden="true"></i>
                    <a href="{{facebook_url}}" class="no-text-decoration" target="_blank" rel="noopener">{{facebook}}</a>
                </p>
            {{/if}}
            <p>
                <i class="fas fa-list-ul" aria-hidden="true"></i>
                {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}
            </p>
        </div>
    </div>
{{/author}}

<main class="container">
    <div class="row">
        <div class="col s12 m12 l8 offset-l2">
            <div class="spacer grey no-margin-bottom"></div>
        </div>
    </div>

    {{> "loop"}}
</main>
